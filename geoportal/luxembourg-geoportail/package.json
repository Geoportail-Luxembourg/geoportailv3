{
  "name": "luxembourg-geoportail",
  "description": "Luxembourg Geoportail WebApp - Using WC",
  "version": "0.0.1-SNAPSHOT",
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "start": "parcel index.html",
    "build": "parcel build index.html",
    "i18next-parse": "i18next --config conf/i18next-parser.config.js"
  },
  "dependencies": {
    "i18next": "^21.9.2",
    "i18next-http-backend": "^1.4.4",
    "i18next-parser": "^6.5.0",
    "lit": "^2.1.2",
    "ol": "^7.1.0",
    "postcss": "^8.4.14",
    "rxjs": "^7.5.7",
    "twind": "^0.16.17"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@camptocamp/ogc-client": "^0.3.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@open-wc/testing-helpers": "^2.1.3",
    "@parcel/resolver-glob": "^2.7.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-esbuild": "^0.3.2",
    "@web/test-runner": "^0.13.16-next.0",
    "autoprefixer": "^10.4.8",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "i18next": "21.5.1",
    "lint-staged": "^10.5.4",
    "parcel": "^2.7.0",
    "parcel-reporter-static-files-copy": "^1.4.0",
    "postcss-custom-properties": "^12.1.8",
    "postcss-url": "^10.1.3",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.1.8",
    "testing-library__dom": "^7.29.4-beta.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "vite": "^2.7.13"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json",
  "staticFiles": {
    "staticPath": "assets",
    "staticOutPath": "assets"
  }
}
